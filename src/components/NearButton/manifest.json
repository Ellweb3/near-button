{
  "displayName": "nearButton",
  "defaultWidth": 160,
  "defaultHeight": 33,
  "resizeX": true,
  "resizeY": true,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
  "props": [
    {
      "name": "signInTitle",
      "displayName": "SignIn Title",
      "type": "text",
      "default": "Near Connect"
    },
    {
      "name": "signOutTitle",
      "displayName": "SignOut Title",
      "type": "text",
      "default": "Near Connect"
    },
    {
      "name": "contractName",
      "displayName": "Contract Name",
      "type": "text",
      "default": "one.nfts.testnet"
    },
    {
      "name": "netType",
      "displayName": "Net Type",
      "type": "text",
      "default": "testnet",
      "control": {
        "type": "menu",
        "options": [
          {
            "label": "TestNet",
            "value": "testnet"
          },
          {
            "label": "MainNet",
            "value": "mainnet"
          }
        ]
      }
    },
    {
      "name": "contractMethods",
      "displayName": "Contract Methods",
      "type": "list"
    },
    {
      "name": "backgroundColor",
      "displayName": "Background Color",
      "type": "color",
      "default": "@primary"
    },
    {
      "name": "onConnect",
      "displayName": "Trigger when the connect is on",
      "type": "action",
      "arguments": [
        {
          "type": "number",
          "displayName": "Current user balance"
        },
        {
          "type": "text",
          "displayName": "Account id user"
        },
        {
          "type": "text",
          "displayName": "Payload"
        }
      ]
    },
    {
      "name": "addMethod",
      "displayName": "Trigger for adding methods",
      "type": "action",
      "arguments": [
        {
          "type": "text",
          "displayName": "newMethod"
        }
      ]
    }
  ]
}